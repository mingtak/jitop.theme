<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
portal = api.portal.get()
about_items, service_items, showcase_items, partner_items, media_items = [],[],[],[],[]
brain = portal['about'].getChildNodes()
for item in brain:
    if item.Type() == 'Page':
        about_items.append(item)
brain = portal['service'].getChildNodes()
for item in brain:
    if item.Type() == 'Page':
        service_items.append(item)
brain = portal['showcase'].getChildNodes()
for item in brain:
    if item.Type() == 'Page':
        showcase_items.append(item)
brain = portal['partner'].getChildNodes()
for item in brain:
    if item.Type() == 'Page':
        partner_items.append(item)
brain = portal['media'].getChildNodes()
for item in brain:
    if item.Type() == 'Page':
        media_items.append(item)
?>


<metal:macro use-macro="context/@@jitop_macro/macros/header" />
<metal:macro use-macro="context/@@jitop_macro/macros/main_slider" />

                
            <!-- Begin about section -->
			<section id="about-section" class="page bg-style1">
                <!-- Begin page header-->
                <div class="page-header-wrapper">
                    <div class="container">
                        <div class="page-header text-center wow fadeInUp" data-wow-delay="0.3s">
                            <h2 style="font-family:微軟正黑體">聯盟簡介</h2>
                            <div class="devider"></div>
                           
                        </div>
                    </div>
                </div>
              <!-- End page header-->

                <!-- Begin rotate box-1 -->
                <div class="rotate-box-1-wrapper">
                    <div class="container">
                        <div class="row">
                            
                            <div class="col-md-6 col-sm-12"
                                 tal:repeat="item about_items">
                                <a href="${item/absolute_url}#about" class="rotate-box-1 square-icon wow zoomIn" data-wow-delay="0.2s">
                                    <div class="rotate-box-info">
                                        <p><img src="${item/absolute_url}/@@images/image/large" width="100%"></p>
                                    </div>
                                </a>
                            </div>
                        </div> <!-- /.row -->
                    </div> <!-- /.container -->
                </div>
                <div class="extra-space-l"></div>
          </section>
          <!-- End about section -->

              
          <!-- Begin Services -->
            <section id="services-section" class="page text-center" >
                <div class="page-header-wrapper">
                    <div class="container">
                        <div class="page-header text-center wow fadeInDown" data-wow-delay="0.4s">
                           <h2 style="font-family:微軟正黑體">服務項目</h2>
                          <div class="devider"></div>
<div tal:replace="structure python:portal['service']['service'].text.raw" />
                      </div>
                    </div>
                </div>
                <div class="rotate-box-2-wrapper">
                    <div class="container">
                        <div class="row">
                      </div> <!-- /.row -->
                    </div> <!-- /.container -->
                </div>
            </section>
            <!-- End Services -->
              
                
          <!-- Begin Services -->
                <div><img src="${portal/absolute_url}/img/bg1.jpg" width="100%"></div>
            <!-- End Services -->      
                
          <!-- Begin Portfolio -->
            <section id="portfolio-section" class="page bg-style1">
            	<div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portfolio">
                                <!-- Begin page header-->
                                <div class="page-header-wrapper">
                                    <div class="container">
                                        <div class="page-header text-center wow fadeInDown" data-wow-delay="0.4s">
                                            <h2 style="font-family:微軟正黑體">合作診所</h2>

                                          <div class="devider"></div>
                                      </div>
                                    </div>
                                </div>
                                <!-- End page header-->
                                <div class="portfoloi_content_area" >
                                    <div class="portfolio_menu" id="filters">
                                        <ul>
                                            <li class="active_prot_menu"><a href="#porfolio_menu" data-filter="*">all</a></li>
    <li tal:repeat="item partner_items">
        <a href="#porfolio_menu" data-filter=".${item/id}">${item/title}</a>
    </li>
                                        </ul>
                                    </div>
                                    <div class="portfolio_content">
                                        <div class="row"  id="portfolio">
                                            <div class="col-xs-12 col-sm-4 ${item/id}" tal:repeat="item partner_items">
                                                <div class="portfolio_single_content">
                                                    <img src="${item/absolute_url}/@@images/image/preview" alt="title"/>
                                                    <div>
                                                        <a href="${item/absolute_url}#clinic">${item/title}</a>
                                                        <span>${item/description}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- End portfolio -->
            
            <!-- Begin testimonials -->
            <section id="team-section">
                <div id="testimonial-trigger" class="testimonial text-white parallax" data-stellar-background-ratio="0.5" style="">
                    <div class="cover"></div>
                    <div class="page-header-wrapper">
                        <div class="container">
                            <div class="page-header text-center wow fadeInDown" data-wow-delay="0.4s">
                              <h2 style="font-family:微軟正黑體;">媒體報導</h2>
                                <div class="devider"></div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="testimonial-inner center-block text-center">
                            <div id="owl-testimonial" class="owl-carousel">
                                <div class="item" tal:repeat="item media_items">
                                    <blockquote>
                                        <p><img src="${item/absolute_url}/@@images/image/preview" style="float:left">
                                           <p tal:replace="structure item/description"></p><a href="${item/absolute_url}#tv">more></a></p>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
              </div>
            </section><br><br>
          <!-- End testimonials -->
                
                
                
            <!-- Begin contact section -->
			<section id="contact-section" class="page text-white parallax" data-stellar-background-ratio="0.5">
            <div class="cover"></div>
            
                 <!-- Begin page header-->
                <div class="page-header-wrapper">
                    <div class="container">
                        <div class="page-header text-center wow fadeInDown" data-wow-delay="0.4s">
                            <h2 style="font-family:微軟正黑體">聯絡我們</h2>
                            <div class="devider"></div>
                        </div>
                    </div>
                </div>
                <!-- End page header-->
                
                <div class="contact wow bounceInRight" data-wow-delay="0.4s">
                    <div class="container">
                    	<div class="row">
                        
                            <div class="col-sm-6">
                                <div class="contact-info">
                                    <h4><img src="${portal/absolute_url}/img/11logo.png"></h4>
                                    <ul class="contact-address">
			                            <li style="font-family:微軟正黑體"><i class="fa fa-map-marker fa-lg"></i>&nbsp; 105台北市中山區復興北路2號A座3F-14</li>
			                            <li style="font-family:微軟正黑體"><i class="fa fa-phone"></i>&nbsp; +886-2-8772-2895</li>
			                            <li style="font-family:微軟正黑體"><i class="fa fa-envelope"></i> ama.bridgecon@gmail.com</li>
			                        </ul>
                                </div>
                            </div>
                        
                        	<div class="col-sm-6">
                                <div class="contact-form">
                                    <form role="form">
                                        <div class="form-group" style="font-family:微軟正黑體">
                                            <input type="text" class="form-control input-lg" placeholder="姓名" required>
                                        </div>
                                        <div class="form-group" style="font-family:微軟正黑體">
                                            <input type="email" class="form-control input-lg" placeholder="E-mail" required>
                                        </div>
                                        <div class="form-group" style="font-family:微軟正黑體">
                                            <textarea class="form-control input-lg" rows="5" placeholder="留言內容" required></textarea>
                                        </div>
                                        <button type="submit" class="btn wow bounceInRight" data-wow-delay="0.8s" style="font-family:微軟正黑體">確認送出</button>
                                    </form>
                                </div>	
                            </div>
                                                                                
                        </div> <!-- /.row -->
                    </div> <!-- /.container -->
                </div>
            </section>
            <!-- End contact section -->
                

<metal:macro use-macro="context/@@jitop_macro/macros/footer" />

</metal:content-core>
</metal:content-core>
</body>
</html>
